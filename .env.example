# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres-service:5432/energy_monitor

# Session Security
SESSION_SECRET=your-local-dev-secret-key-change-in-production

# Bot Configuration 
TELEGRAM_BOT_TOKEN=your_bot_token_here  # Get from @BotFather
ADMIN_CHAT_ID=your_chat_id_here         # Get after messaging your bot

# API Keys
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# Module Configuration
MIN_RATE=3.0                            # Minimum rate for price alerts
PRICE_UPDATE_INTERVAL=300               # Price update interval in seconds

# Development Settings
DEBUG=true                              # Enable debug mode for development
LOG_LEVEL=DEBUG                         # Logging level (DEBUG, INFO, WARNING, ERROR)

# Service URLs (for local development)
FIVE_MIN_PRICE_URL=https://srddev.pythonanywhere.com/api/fiveminPrice
HOURLY_PRICE_URL=https://srddev.pythonanywhere.com/api/hourlyprice
HEALTH_CHECK_URL=https://srddev.pythonanywhere.com/api/health

# Redis Cache (optional)
REDIS_URL=redis://redis-service:6379/0  # Redis connection URL