modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "python minimal_bot.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Price Monitor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Agents"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Price Data Scheduler"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Tesla Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Webhook Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "LivePrice Agent Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Price Alert Bot"

[[workflows.workflow]]
name = "Telegram Price Monitor"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python minimal_bot.py"

[[workflows.workflow]]
name = "Test Agents"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_agents.py"

[[workflows.workflow]]
name = "Price Data Scheduler"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python price_scheduler.py"

[[workflows.workflow]]
name = "Tesla Tests"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest tests/test_tesla_charging.py -v"

[[workflows.workflow]]
name = "Telegram Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python minimal_bot.py"

[[workflows.workflow]]
name = "Telegram Webhook Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m hypercorn bot:app --bind 0.0.0.0:5000 --access-log -"
waitForPort = 5000

[[workflows.workflow]]
name = "LivePrice Agent Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest tests/test_live_price_agent.py -v"

[[workflows.workflow]]
name = "Price Alert Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python bot_runner.py"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080
